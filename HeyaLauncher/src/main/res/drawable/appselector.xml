<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" android:drawable="@color/ui_color_pressed" />

    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/ui_color_pressed" />
        </shape>
    </item>

    <item android:state_window_focused="true" android:drawable="@drawable/appselector_bg" />

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>